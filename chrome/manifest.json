{
  "manifest_version": 3,
  "name": "Google Meet Dark Mode",
  "version": "1.0",
  "description": "Enable dark mode on Google Meet",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://meet.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
